.sidebar
  .sidebar-header
    width 100%
    display flex
    justify-content center
    box-sizing border-box
    padding 0 18px
    color #644b2b

  .sidebar-header-control
    font-family 'Ubuntu', Verdana
    font-size 24px
    flex-grow 1
    text-align center
    color #e0c59e
    text-shadow 2px 2px 2px #644b2b
    padding 6px

  .sidebar-header-control:first-child
    text-align left

  .sidebar-header-control:last-child
    text-align right
