@require "mixins/page-text"

#left-sidebar-container
  position relative
  flex-grow 1

  width 100%
  overflow auto
  box-sizing border-box

  color #644b2b

  #outline
    box-sizing border-box
    padding 0 12px

    li
      padding 0.5em
      font-size 1.5em
      min-height 1em
      margin 0
      cursor default
      text-align center
      list-style-position inside
      list-style-type none

      page-text()

    li:hover
      background-color #e0c59e
