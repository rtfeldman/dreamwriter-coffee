@require "mixins/page-text"

#left-sidebar-container
  position relative
  flex-grow 1

  width 100%
  overflow auto
  box-sizing border-box

  color #644b2b

  #file-buttons
    text-align center
    margin-bottom 50px

  .file-button
    font-size 18px
    padding-left 4%
    padding-right 4%
    text-shadow 1px 1px 1px #e0c59e
    font-family Ubuntu, Verdana
    cursor pointer

    &:hover
      color black

  #title, #outline li
    padding 4px
    min-height 1em
    margin 0
    cursor default
    text-align center

    text-align center
    page-text()

    font-size 16px

    &:hover
      background-color #e0c59e

  #title
    font-size 24px
    margin 12px
    margin-top 30px
    margin-bottom 0
    box-sizing border-box

  #outline
    box-sizing border-box
    padding 0 12px

    li
      font-size 18px
      list-style-position inside
      list-style-type none

  #open
    .open-entry
      font-size 18px
      padding 0.5em 1em 0.5em 1em
      min-height 1.5em
      margin 0.5em
      background-color white
      border-radius 1em
      border 1px solid dark-brown
      cursor pointer

      .delete
        font-size 0.75em
        background dark-brown
        color toolbar-background
        border 1px solid dark-brown
        border-radius 20px
        margin-top 2px
        float right
        height 22px
        padding 2px 0.5em 2px 0.5em

      &.current
        opacity: 0.5

        &:hover
          opacity: inherit

      &:hover
        background-color #F4F0EC

      .deleted
        font-style italic
        border none
        background none
        cursor inherit

        button
          padding-left 1em
          padding-right 1em
          margin-left 1em

        :hover
          background inherit

    #openFileChooser
      opacity 0
      position absolute
      top 0
        left 0