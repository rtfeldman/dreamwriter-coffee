@require "mixins/page-text"

#right-sidebar-container
  position relative
  flex-grow 1

  width 100%
  overflow auto
  box-sizing border-box

  color #644b2b
  opacity 0.8

  &:hover, &:focus
    background-color #e0c59e
    color #644b2b
    opacity 1

  #right-sidebar-header
    position relative
    width 100%
    box-sizing border-box

    font-size 32px
    padding 0 16px
    line-height 32px

    color #644b2b

  #notes
    padding 20px
    box-sizing border-box

    page-text()

    font-size 16px
    line-height 1.62em
